{
  "name": "nextjs15-mui",
  "version": "1.0.0",
  "author": "TuanNA <tuanna.fed@gmail.com>",
  "private": true,
  "type": "module",
  "keywords": [
    "typescript",
    "react",
    "hooks",
    "utils",
    "helpers",
    "nextjs",
    "nextjs v15",
    "authjs",
    "mui",
    "rtk-query",
    "nextauth-v5"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json}\" --ignore-path .prettierignore",
    "prepare": "husky",
    "preinstall": "npx -y only-allow pnpm",
    "precommit": "lint-staged && validate-branch-name",
    "clean": "rimraf .turbo node_modules .next .output pnpm-lock.yaml"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^3.10.0",
    "@mui/icons-material": "^6.3.1",
    "@mui/lab": "6.0.0-beta.22",
    "@mui/material": "^6.3.1",
    "@mui/material-nextjs": "^6.3.1",
    "@mui/x-date-pickers": "^7.23.6",
    "@next/bundle-analyzer": "^15.1.4",
    "@reduxjs/toolkit": "^2.5.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.471.0",
    "next": "15.1.3",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "^3.26.3",
    "nextjs-toploader": "^3.7.15",
    "proxy-memoize": "^3.0.1",
    "qs": "^6.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-number-format": "^5.4.3",
    "react-redux": "^9.2.0",
    "react-tna": "^1.2.3",
    "react-toastify": "^11.0.3",
    "recharts": "^2.15.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.18.0",
    "@next/eslint-plugin-next": "^15.1.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.17.14",
    "@types/node": "^20",
    "@types/qs": "^6.9.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "typescript-eslint": "^8.19.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "pnpm format",
      "next lint --fix --file"
    ],
    "*.json": [
      "pnpm format",
      "git add ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(feature|fix|hotfix|release|chore)/TASK-\\d+-.+$",
    "errorMsg": "Branch name must start with [feature/fix/hotfix/release/chore]/TASK-0-branch-name"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.18.0"
  }
}
